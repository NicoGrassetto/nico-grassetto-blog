---
export interface Props {
	title?: string;
	description?: string;
}

const { title = "Nico Grassetto's Blog", description = "A modern blog built with Astro.js" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<nav class="nav-container">
				<a href="/" class="logo">Nico Grassetto</a>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer class="site-footer">
			<p>&copy; 2025 Nico Grassetto. Built with Astro.js</p>
		</footer>
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		line-height: 1.6;
		color: #333;
		background-color: #f8fafc;
	}

	.site-header {
		background: white;
		box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.nav-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem 2rem;
	}

	.logo {
		font-size: 1.5rem;
		font-weight: 700;
		color: #1f2937;
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.logo:hover {
		color: #3b82f6;
	}

	main {
		min-height: calc(100vh - 140px);
	}

	.site-footer {
		background: #1f2937;
		color: #9ca3af;
		text-align: center;
		padding: 2rem;
		margin-top: 4rem;
	}

	.site-footer p {
		margin: 0;
	}

	@media (max-width: 768px) {
		.nav-container {
			padding: 1rem;
		}
	}
</style>
